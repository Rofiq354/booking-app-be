{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist" /* Ini wajib: Semua file .ts jadi .js di sini */,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true /* Membantu debugging jika error di server */,
    "declaration": false
  },
  "include": ["src/**/*"] /* Pastikan hanya folder src yang di-build */,
  "exclude": ["node_modules", "**/test/**", "**/seed.ts"]
}
